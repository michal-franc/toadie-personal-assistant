<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dynamic background (mood-driven gradient) -->
    <com.claudewatch.companion.creature.BackgroundView
        android:id="@+id/backgroundView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!-- Header with connection status and settings -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@color/background_surface">

        <!-- Connection status indicator -->
        <View
            android:id="@+id/connectionIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/circle_indicator" />

        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/disconnected"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_preferences"
            android:contentDescription="Settings"
            app:tint="@android:color/white" />

    </LinearLayout>

    <!-- Context Usage Bar -->
    <LinearLayout
        android:id="@+id/contextBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:background="@color/background_surface"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Context:"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/contextProgress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/context_progress" />

        <TextView
            android:id="@+id/contextPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Creature view (40% height) -->
    <com.claudewatch.companion.creature.CreatureView
        android:id="@+id/creatureView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_surface" />

    <!-- Chat RecyclerView (60% height) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_chat_claude" />

    <!-- Permission Prompt -->
    <LinearLayout
        android:id="@+id/promptContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp"
        android:padding="16dp"
        android:background="@drawable/bg_prompt"
        android:visibility="gone">

        <TextView
            android:id="@+id/promptTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#60A5FA"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:letterSpacing="0.05"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/promptContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:background="@drawable/bg_prompt_context"
            android:padding="10dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/promptQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/promptOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

    <!-- Input bar -->
    <LinearLayout
        android:id="@+id/inputBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:background="@color/background_surface">

        <!-- Voice record button -->
        <ImageButton
            android:id="@+id/voiceButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_button"
            android:src="@android:drawable/ic_btn_speak_now"
            android:contentDescription="Record voice"
            android:scaleType="centerInside"
            android:padding="12dp"
            app:tint="@android:color/white" />

        <!-- Text input -->
        <EditText
            android:id="@+id/messageInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/bg_input_field"
            android:hint="Type a message..."
            android:textColorHint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:maxLines="4"
            android:inputType="textCapSentences|textMultiLine"
            android:imeOptions="actionSend" />

        <!-- Send button -->
        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_button_accent"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="Send message"
            android:scaleType="centerInside"
            android:padding="12dp"
            app:tint="@android:color/white" />

    </LinearLayout>

    </LinearLayout>

    <!-- Kiosk mode exit button (top-left corner) -->
    <ImageButton
        android:id="@+id/kioskExitButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="top|start"
        android:layout_margin="8dp"
        android:background="@drawable/bg_kiosk_exit_button"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="Exit kiosk mode"
        android:scaleType="centerInside"
        android:padding="8dp"
        android:alpha="0.5"
        android:visibility="gone"
        app:tint="@android:color/white" />

</FrameLayout>
