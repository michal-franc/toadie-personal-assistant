<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:padding="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Connection status bar at top -->
        <View
            android:id="@+id/connectionDot"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="top"
            android:background="@android:color/holo_red_light" />

        <!-- Hidden text view kept for code compatibility -->
        <TextView
            android:id="@+id/connectionText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- Settings button hidden (moved to bottom bar) -->
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:contentDescription="Settings" />

        <!-- Chat RecyclerView in middle -->
        <androidx.wear.widget.WearableRecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingTop="4dp"
            android:paddingBottom="48dp" />

        <!-- Bottom bar: settings, record, speaker -->
        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Settings button (left of record) -->
            <ImageView
                android:id="@+id/settingsButtonBottom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_settings"
                android:contentDescription="Settings"
                app:tint="@android:color/darker_gray"
                android:scaleType="centerInside"
                android:padding="5dp"
                android:background="@drawable/round_button_dark"
                android:clickable="true"
                android:focusable="true" />

            <!-- Record button (center) -->
            <TextView
                android:id="@+id/recordButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="Rec"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@drawable/round_button"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

            <!-- Speaker toggle (right of record) -->
            <ImageView
                android:id="@+id/speakerToggle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_speaker"
                android:contentDescription="Toggle voice response"
                app:tint="#888888"
                android:scaleType="centerInside"
                android:padding="5dp"
                android:background="@drawable/round_button_dark"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Abort button at bottom center (hidden) -->
        <TextView
            android:id="@+id/abortButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Stop"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:background="@drawable/round_button_orange"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

        <!-- Audio playback controls at bottom (hidden) -->
        <LinearLayout
            android:id="@+id/audioControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/replayButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Re"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:background="@drawable/round_button_green"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/pauseButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="Pause"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:background="@drawable/round_button"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Done button at bottom (hidden) -->
        <TextView
            android:id="@+id/doneButton"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="bottom|center_horizontal"
            android:text="Done"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:background="@drawable/round_button_green"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

        <!-- Disconnected overlay on chat area -->
        <FrameLayout
            android:id="@+id/disconnectedOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="48dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="4dp"
                android:text="NOT CONNECTED"
                android:textColor="#88FFFFFF"
                android:textSize="8sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

        </FrameLayout>

        <!-- State indicator (RECORDING, THINKING, etc.) - overlays chat -->
        <TextView
            android:id="@+id/stateIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:elevation="4dp"
            android:visibility="gone" />

        <!-- Thinking overlay (full-screen, hidden) -->
        <FrameLayout
            android:id="@+id/thinkingOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#73000000"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:indeterminateTint="@android:color/holo_blue_light" />

        </FrameLayout>

        <!-- Prompt overlay (full-screen, hidden) -->
        <LinearLayout
            android:id="@+id/promptOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#DD000000"
            android:padding="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/promptTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Permission"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/promptContext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#AAAAAA"
                android:textSize="9sp"
                android:textAlignment="center"
                android:maxLines="3"
                android:ellipsize="end"
                android:visibility="gone"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/promptQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allow action?"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:textAlignment="center"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_marginBottom="6dp" />

            <ScrollView
                android:id="@+id/promptOptionsScroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/promptOptionsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center" />

            </ScrollView>

        </LinearLayout>

    </FrameLayout>

</androidx.wear.widget.BoxInsetLayout>
